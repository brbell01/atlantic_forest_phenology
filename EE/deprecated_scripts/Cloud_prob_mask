var s2 = ee.ImageCollection('COPERNICUS/S2');
var s2Clouds = ee.ImageCollection('COPERNICUS/S2_CLOUD_PROBABILITY');

var START_DATE = ee.Date('2015-01-01');
var END_DATE = ee.Date('2022-01-01');
var MAX_CLOUD_PROBABILITY = 65;
var region = ee.FeatureCollection("projects/af-phenology/assets/Parks/PN_Mata_Escura");
var hectares = ee.FeatureCollection("projects/af-phenology/assets/Hectares/1_MataEscura_Hectares");

Map.centerObject(region,11)

function maskClouds(img) {
  var clouds = ee.Image(img.get('cloud_mask')).select('probability');
  var isNotCloud = clouds.lt(MAX_CLOUD_PROBABILITY);
  return img.updateMask(isNotCloud);
}

// The masks for the 10m bands sometimes do not exclude bad data at
// scene edges, so we apply masks from the 20m and 60m bands as well.
// Example asset that needs this operation:
// COPERNICUS/S2_CLOUD_PROBABILITY/20190301T000239_20190301T000238_T55GDP
function maskEdges(s2_img) {
  return s2_img.updateMask(
      s2_img.select('B8A').mask().updateMask(s2_img.select('B9').mask()));
}

// Filter input collections by desired data range and region.
var criteria = ee.Filter.and(
    ee.Filter.bounds(hectares), ee.Filter.date(START_DATE, END_DATE));
s2 = s2.filter(criteria).map(maskEdges);
s2Clouds = s2Clouds.filter(criteria);

// Join S2 SR with cloud probability dataset to add cloud mask.
var s2WithCloudProperty = ee.Join.saveFirst('cloud_mask').apply({
  primary: s2,
  secondary: s2Clouds,
  condition:
      ee.Filter.equals({leftField: 'system:index', rightField: 'system:index'})
});

print(s2)
print(s2Clouds)
print(s2WithCloudProperty) //check out an image in this collection now. 
// You can see the 'cloud_mask' property is added to the s2 collection,
// which can be used to filter out using MAX_CLOUD_PROBABILITY criteria.

var s2CloudMasked =
    ee.ImageCollection(s2WithCloudProperty).map(maskClouds);



var rgbVis = {min: 0, max: 3000, bands: ['B4', 'B3', 'B2']};

Map.addLayer(
    s2.first(), rgbVis, 'Example S2 image',
    true);
Map.addLayer(
    s2CloudMasked.first(), rgbVis, 'Example S2 masked at ' + MAX_CLOUD_PROBABILITY + '%',
    true);

var empty = ee.Image().byte();
var outline = empty.paint({
  featureCollection: region,
  color: 1,
  width: 3
});
var outline2 = empty.paint({
  featureCollection: hectares,
  color: 1,
  width: 1
});
Map.addLayer(outline, {palette: '00FF00'}, 'Study Area 1');
Map.addLayer(outline2, {palette: 'FF0000'}, 'Hectares');

    